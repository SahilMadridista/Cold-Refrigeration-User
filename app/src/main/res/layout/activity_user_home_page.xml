<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UserHomePageActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_to"
                android:id="@+id/one"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app"
                android:layout_below="@id/one"
                android:textSize="25sp"
                android:id="@+id/two"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/white"
                android:layout_marginStart="10dp">

            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sign_out"
                android:layout_margin="10dp"
                android:id="@+id/sign_out"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true">

            </ImageView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_card"
                android:layout_marginBottom="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_profile"
                            android:id="@+id/profile_icon"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp">

                        </ImageView>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:id="@+id/part1"
                            android:background="@color/transparent_white"
                            android:layout_toEndOf="@id/profile_icon"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true">

                        </View>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/name_text"
                            android:layout_toEndOf="@id/part1"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/dark_grey"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp">

                        </TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_phone"
                            android:id="@+id/phone_icon"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp">

                        </ImageView>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:id="@+id/part2"
                            android:background="@color/transparent_white"
                            android:layout_toEndOf="@id/phone_icon"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true">

                        </View>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@id/part2"
                            android:gravity="center_vertical"
                            android:id="@+id/phone_text"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/dark_grey"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp">

                        </TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_email"
                            android:id="@+id/email_icon"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp">

                        </ImageView>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:id="@+id/part3"
                            android:background="@color/transparent_white"
                            android:layout_toEndOf="@id/email_icon"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true">

                        </View>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@id/part3"
                            android:gravity="center_vertical"
                            android:id="@+id/email_text"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/dark_grey"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp">

                        </TextView>

                    </RelativeLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pending_card"
                android:layout_marginBottom="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_pending"
                        android:id="@+id/pending_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp">

                    </ImageView>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:id="@+id/part5"
                        android:background="@color/transparent_white"
                        android:layout_toEndOf="@id/pending_icon"
                        android:layout_marginStart="10dp"
                        android:layout_centerVertical="true">

                    </View>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/part5"
                        android:text="@string/pending"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/dark_grey"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp">

                    </TextView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/need_service_card"
                android:layout_marginBottom="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_service"
                        android:id="@+id/service_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp">

                    </ImageView>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:id="@+id/part"
                        android:background="@color/transparent_white"
                        android:layout_toEndOf="@id/service_icon"
                        android:layout_marginStart="10dp"
                        android:layout_centerVertical="true">

                    </View>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/part"
                        android:text="@string/need_service"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/dark_grey"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp">

                    </TextView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/previous_card"
                android:layout_marginBottom="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_previous"
                        android:id="@+id/pre_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp">

                    </ImageView>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:id="@+id/par"
                        android:background="@color/transparent_white"
                        android:layout_toEndOf="@id/pre_icon"
                        android:layout_marginStart="10dp"
                        android:layout_centerVertical="true">

                    </View>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/par"
                        android:text="@string/previous"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/dark_grey"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp">

                    </TextView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>